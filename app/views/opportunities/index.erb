<% if current_student? %>
  <h1 class="headingcenter dark-grey-text">My Opportunities</h1>
<% elsif current_org? %>
  <a href = '/organizations/opportunities/new'><h3> Add a new opportunity </h3></a>
<% end %>

<% if @opportunities.any? %>
    <% @opportunities.each do |opportunity| %>
      <div class="contain"> 
        <ul class="collection card small z-depth-5">
          <%= erb :'partials/_opportunities', locals: { opportunity: opportunity } %>
        </ul>
      </div>
    <% end %>
<% else %>
    <h3>No current opportunities</h3>
<% end %>
