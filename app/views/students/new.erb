<div class="entire-login-page">
  <h2>Register</h2>
  <%= erb :'partials/_errors' %>
  <div class="form-login">
    <form method="post" action="/students">
      <div class="form-group">
        <input type="text" name="student[first_name]" class="form-control" placeholder="First Name" value=<%= @student.first_name %>>
      </div>
      <div class="form-group">
        <input type="text" name="student[last_name]" class="form-control" placeholder="Last Name" value=<%= @student.last_name %>>
      </div>
      <div class="form-group">
        <input type="email" name="student[email]" class="form-control" placeholder="Email" value=<%= @student.email %>>
      </div>
      <div class="form-group">
        <input type="password" name="password" class="form-control" placeholder="Password">
        <br>
        <input type="password" name="password2" class="form-control" placeholder="Confirm Password">
      </div>
      <button type="submit" class="btn btn-default">Register</button>
    </form>
  </div>
</div>