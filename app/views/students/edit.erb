<h2>Edit Student Info</h2>
<%= erb :'partials/_errors' %>
<form method="post" action="/students">
<input type="hidden" name="_method" value="put" />
  <div class="form-group">
  <label>First Name</label>
    <input type="text" name="student[first_name]" class="form-control" value='<%= current_student.first_name %>'>
  </div>
  <div class="form-group">
  <label>Last Name</label>
    <input type="text" name="student[last_name]" class="form-control" value='<%= current_student.last_name %>'>
  </div>
  <div class="form-group">
  <label>Email</label>
    <input type="email" name="student[email]" class="form-control" value='<%= current_student.email %>'>
  </div>
  <label>Phone Number</label>
    <input type="text" name="student[phone_number]" class="form-control" value='<%= current_student.phone_number %>'>
  </div>
  <button type="submit" class="btn btn-default">Update</button>
</form>