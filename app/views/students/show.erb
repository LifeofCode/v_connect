<div class="col-lg-12">

  <div class="col-lg-6">
    <img src="https://upload.wikimedia.org/wikipedia/commons/e/e5/Seine_wide.jpg" alt="..." class="img-thumbnail">
    <h1 class = "profile-name"> <%= current_student.first_name%> <%= current_student.last_name %> 
    <a href='/students/edit'><small>Edit Profile</small></a></h1>
    <div class = "profile-box">
      <div class = "format">
        <h3> About me </h3>
        <h4> Email: </h4> <%= current_student.email%>
        <h4> Phone Number: </h4> <%= current_student.phone_number%>
      </div>
    </div>
  </div>

  <div class = "col-lg-6">
    <div class = "profile-box">
      <div class = "format">
        <div class = "vertical-space-format">
        <% if @organizations.any? %>
        <h3> Favourite Organizations </h3>
          <% @organizations.each do |organization| %>
            <%= erb :'/partials/_show_organization', locals: { organization: organization } %>
            <form method="post" action="/favourite">
              <%= erb :'partials/_unfavourite_button', locals: { organization: organization } %>
            </form>
          <% end %>
        <% else %>
          <h3>You haven't favourited any organizations yet. 
          <br>
          <a href="/organizations">Browse Organizations</a></h3>
        <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
