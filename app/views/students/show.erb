<div class="col-lg-12">
  <div class="col-lg-6">
    <img src="https://upload.wikimedia.org/wikipedia/commons/e/e5/Seine_wide.jpg" alt="..." class="img-thumbnail">
    <h1 class = "profile-name"> <%= @student.first_name%> <%= @student.last_name %> 

    <% if @organizations %>
      <a href='/students/edit'><small>Edit Profile</small></a></h1>
    <% end %>

    <div class = "profile-box">
      <div class = "format">
        <% if !@student.about.blank? %>
          <h4> About me: </h4>
          <h5> <%= @student.about %> </h5>
        <% end %>
          <h4> Email: </h4> 
          <h5> <%= @student.email%> </h5> 
        <% if !@student.phone_number.blank? %>
          <h4> Phone Number: </h4> 
          <h5> <%= @student.phone_number%> </h5>
        <% end %>
      </div>
    </div>
  </div>
  <% if @organizations %>
    <div class = "col-lg-6">
      <div class = "profile-box">
        <div class = "format">
          <div class = "vertical-space-format">
            <h3> Favourite Organizations </h3>
            <%= erb :'partials/_organizations' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
