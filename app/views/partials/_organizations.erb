<% @organizations.each do |organization| %>
  <div> 
    <a href="/organizations/<%= organization.id %>" > <%= organization.name %> </a>
    <h5> Email: <%= organization.email %></h5> 
    <h5> Phone Number: <%= organization.phone_number %> </h5>
  </div>  
  <% if current_student? %>
    <form method="post" action="/favourite">
      <% if @student_favs.include?(organization.id) %>
      <input name="_method" type="hidden" value="delete" />
        <input  class="btn btn-danger" type="submit" value="Favourited" title="Click to de-favourite this organization">
        <input type="hidden" name='organization_id' value='<%= organization.id %>'> 
      <% else %>
        <input  class="btn btn-success" type="submit" value="Favourite">
        <input type="hidden" name='organization_id' value='<%= organization.id %>'> 
      <% end %>
    </form>
  <% end %>
<% end %>