<div class="col-lg-12">
  <div class="row">
    <div class="col-lg-6"><!-- Organization Profile -->
      <img src="https://upload.wikimedia.org/wikipedia/commons/e/e5/Seine_wide.jpg" alt="..." class="img-thumbnail">
      <h1 class = "profile-name"> <%= @organization.name%> 
        <small><a href='/organizations/edit'>Edit Profile</a></small>
      </h1>
      <a href = '/organizations/opportunities'><div class = "btn btn-primary">Our Opportunities</div></a>
      <div class = "profile-box">
      <div class = "format">
        <h3> Organization Info </h3>
        <h4> Email: </h4> <%= @organization.email%>
        <h4> Phone Number: </h4> <%= @organization.phone_number%>
      </div>
    </div><!-- .profile-box -->
    </div><!-- organization profile .col-lg-6 -->

    <% if current_org? && @students %>
    <div class = "col-lg-6"><!-- Interested Students -->
      <div class = "profile-box">
        <div class = "format">
          <div class = "vertical-space-format">
            <h3> Interested Students</h3>
            <%= erb :'partials/_students' %>
          </div>
        </div>
      </div>
    </div><!-- Interested Students.col-lg-6 -->
    <% end %>
  </div><!-- .row -->

</div><!-- .col-lg-12 -->