<h2>Edit Organization Info</h2>
<%= erb :'partials/_errors' %>
<form method="post" action="/organizations">
<input type="hidden" name="_method" value="put" />
  <div class="form-group">
     <label>Organization Name</label>
    <input type="text" name="org[name]" class="form-control" value='<%= current_org.name %>'>
  </div>
  <div class="form-group">
     <label>Email address</label>
    <input type="email" name="org[email]" class="form-control" value='<%= current_org.email %>'>
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" name="password" class="form-control" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-default">Update</button>
</form>