<div class="container">
  <h2>Edit Organization Info</h2>
  <%= erb :'partials/_errors' %>
  <form method="post" action="/organizations">
    <input type="hidden" name="_method" value="put" />
    <div class="form-group">
      <label>Organization Name</label>
      <input type="text" name="org[name]" class="form-control" value='<%= @organization.name %>'>
    </div>
    <div class="form-group">
      <label>Email Address</label>
      <input type="email" name="org[email]" class="form-control" value='<%= @organization.email %>'>
    </div>
    <div class="form-group">
      <label>Phone Number</label>
      <input type="text" name="org[phone_number]" class="form-control" value='<%= @organization.phone_number %>'>
    </div>
    <div class="form-group">
      <label>Picture URL</label>
      <input type="text" name="org[picture]" class="form-control" value='<%= @organization.picture %>'>
    </div>
    <button type="submit" class="btn btn-default">Update</button>
  </form>
</div>